<%- include('../../layout/master') %>
    <div class="container">
        <div class="section">
            <h1>Add Position</h1>
            <%- include('../../partials/validate') %>
                <form action="/employees/store" method="post">
                    <label for="first_name">First Name :</label><br>
                    <input type="text" id="first_name" name="first_name" placeholder="e.g: John"><br>
                    <label for="last_name">Last Name :</label><br>
                    <input type="text" id="last_name" name="last_name" placeholder="e.g: Doe"><br>
                    <label for="phone_number">Phone Number :</label><br>
                    <input type="number" id="phone_number" name="phone_number" placeholder="e.g: 0822345678"><br>
                    <label for="gender">Gender:</label><br>
                    <input type="radio" id="male" name="gender" value="male" checked>
                    <label for="male">Male</label><br>
                    <input type="radio" id="female" name="gender" value="female">
                    <label for="female">Female</label><br><br>
                    <label for="position">Position :</label><br>
                    <select name="positionId" id="position" id="positionId">
                    <option value="" selected> --- Position ---</option>
                    <% position.forEach(el => { %>
                    <option value="<%= el.id %>" > <%= el.name %> </option>
                    <% }) %>
                    <input type="submit" class="button btnSubmit" value="Submit">
                </form>
        </div>
    </div>